<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popuplar_movies_list_item_section_header">
        <item name="android:paddingTop">@dimen/popuplar_movies_list_item_section_header_padding_vert</item>
        <item name="android:paddingBottom">@dimen/popuplar_movies_list_item_section_header_padding_vert</item>
        <item name="android:paddingStart">@dimen/popuplar_movies_list_item_section_header_padding_horz</item>
        <item name="android:paddingEnd">@dimen/popuplar_movies_list_item_section_header_padding_horz</item>
    </style>

    <style name="popuplar_movies_list_item_section_header_title">
        <item name="android:text">@string/popular_movies_list_section_header</item>
        <item name="android:textSize">@dimen/popuplar_movies_list_item_ection_header_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="popuplar_movies_list_item_movie_cardview">
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="popuplar_movies_list_item_movie_right_content">
        <item name="android:paddingStart">@dimen/popuplar_movies_list_item_movie_right_content_padding</item>
        <item name="android:paddingEnd">@dimen/popuplar_movies_list_item_movie_right_content_padding</item>
        <item name="android:paddingBottom">@dimen/popuplar_movies_list_item_movie_right_content_padding</item>
    </style>

    <style name="popuplar_movies_list_item_movie_title">
        <item name="android:textSize">@dimen/popuplar_movies_list_item_movie_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/popuplar_movies_list_item_movie_title</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="popuplar_movies_list_item_movie_subtitle">
        <item name="android:textSize">@dimen/popuplar_movies_list_item_movie_ratings_size</item>
        <item name="android:textColor">@color/popuplar_movies_list_item_movie_ratings</item>
    </style>

    <style name="movie_detail_bottom_sheet">
        <item name="behavior_hideable">true</item>
        <item name="behavior_peekHeight">@dimen/movie_detail_height</item>
        <item name="android:background">@color/movie_detail_background</item>
        <item name="android:padding">@dimen/movie_detail_padding</item>
    </style>

    <style name="movie_detail_title">
        <item name="android:textSize">@dimen/movie_detail_title_size</item>
        <item name="android:textColor">@color/movie_detail_title</item>
        <item name="android:text">@string/movie_detail_synopsis</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="movie_detail_synopsis">
        <item name="android:textSize">@dimen/movie_detail_synopsis_size</item>
        <item name="android:textColor">@color/movie_detail_synopsis</item>
        <item name="android:text">@string/movie_detail_synopsis</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="movie_detail_overview">
        <item name="android:textSize">@dimen/movie_detail_overview_size</item>
        <item name="android:textColor">@color/movie_detail_overview</item>
    </style>

    <style name="movie_detail_more_details">
        <item name="android:textSize">@dimen/movie_detail_more_details_size</item>
        <item name="android:textColor">@color/movie_detail_overview</item>
        <item name="android:textStyle">italic</item>
        <item name="android:text">@string/movie_detail_more_details</item>
    </style>

</resources>
