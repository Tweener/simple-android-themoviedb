<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/popular_movies_list_item_movie_cardview"
    style="@style/popuplar_movies_list_item_movie_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/popuplar_movies_list_item_movie_image_padding">

        <ImageView
            android:id="@+id/popular_movies_list_item_movie_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="centerCrop"/>

        <LinearLayout
            style="@style/popuplar_movies_list_item_movie_right_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/popuplar_movies_list_item_movie_right_content_margin_start"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popular_movies_list_item_movie_title"
                style="@style/popuplar_movies_list_item_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/popular_movies_list_item_movie_release_date"
                style="@style/popuplar_movies_list_item_movie_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/popular_movies_list_item_movie_ratings"
                style="@style/popuplar_movies_list_item_movie_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>